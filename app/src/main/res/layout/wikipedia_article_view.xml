<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <WebView
        android:id="@+id/wiki_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_toolbar" />

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#107FBB"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="7dp"
        tools:layout_conversion_absoluteHeight="59dp"
        tools:layout_conversion_absoluteWidth="411dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/article_save_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/not_saved_icon" />

        <TextView
            android:id="@+id/tv_load_status"
            android:layout_width="341dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/article_save_button"
            android:text="Loading webpage..."
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>